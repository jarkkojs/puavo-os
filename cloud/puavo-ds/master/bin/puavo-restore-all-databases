#                           'puavoTag pres,eq',
#                           'puavoDeviceType pres,eq',
#                           'puavoHostname pres,eq,sub',
#                           'displayName,puavoEduPersonReverseDisplayName pres,eq,sub',
#                           'uid pres,eq',
#                           'krbPrincipalName pres,eq',
#                           'cn,sn,mail,givenName pres,eq,approx,sub',
