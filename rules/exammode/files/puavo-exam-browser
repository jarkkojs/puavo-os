#!/usr/bin/python3

import sys

import gi
gi.require_version('Gtk', '3.0')        # explicitly require Gtk3, not Gtk2
gi.require_version('WebKit2', '4.1')    # explicitly require version 4
from gi.repository import Gtk, WebKit2

class PuavoExamBrowser(Gtk.Window):
  def __init__(self, url):
    super(PuavoExamBrowser, self).__init__()

    self.connect('destroy', Gtk.main_quit)

    self.set_title('Puavo Exam Browser')
    self.set_position(Gtk.WindowPosition.CENTER)
    self.set_size_request(640, 480)
    self.maximize()

    self.webview = WebKit2.WebView()
    self.disable_cert_checks()  # XXX perhaps not okay?

    if url == '':
      self.vbox = Gtk.Box(orientation=Gtk.STYLE_CLASS_VERTICAL)
      self.vbox.expand = True

      self.urlbar = Gtk.Entry()
      self.urlbar.expand = True
      self.urlbar.set_text(url)
      self.urlbar.connect('activate', self.on_change_uri)
      self.vbox.add(self.urlbar)
      self.vbox.pack_start(self.webview, True, True, 0)
      self.add(self.vbox)
    else:
      self.add(self.webview)

    self.webview.load_uri(url)

    self.show_all()


  def on_change_uri(self, widget):
    new_uri = self.urlbar.get_text()
    self.webview.load_uri(new_uri)


  # XXX is this okay?
  def disable_cert_checks(self):
    web_context = self.webview.get_context()
    web_context.set_tls_errors_policy(WebKit2.TLSErrorsPolicy.IGNORE)


url = ''
if len(sys.argv) == 2:
    url = sys.argv[1]

Gtk.init(sys.argv)
webwindow = PuavoExamBrowser(url)
Gtk.main()
